<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/rails_default' %> <!-- they are in views/layouts -->
    <%= render 'layouts/shim' %> <!-- for old IE -->
  </head>

  <body>
    <%= render 'layouts/header' %> <!-- header tag -->
    <div class="container">
      
      <!-- define flash -->
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
        <!--<div class="alert alert-<%#= message_type %>"><%#= message %></div>-->
      <% end %>
      
      <%= yield %>
      <%= render 'layouts/footer' %> <!-- footer tag -->
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
